<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
	
	<display-name>NexPlay</display-name>
	
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.user.LoginServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>SignupServlet</servlet-name>
        <servlet-class>com.user.SignupServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>SignupServlet</servlet-name>
        <url-pattern>/SignupServlet</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>UserUpdateServlet</servlet-name>
        <servlet-class>com.user.UserUpdateServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>UserUpdateServlet</servlet-name>
        <url-pattern>/UserUpdateServlet</url-pattern>
    </servlet-mapping>
    
    <servlet>
	    <servlet-name>UpdateUserStatusServlet</servlet-name>
	    <servlet-class>com.user.UpdateUserStatusServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
	    <servlet-name>UpdateUserStatusServlet</servlet-name>
	    <url-pattern>/UpdateUserStatusServlet</url-pattern>
	</servlet-mapping>

    
    <servlet>
	    <servlet-name>UserProfileServlet</servlet-name>
	    <servlet-class>com.user.UserProfileServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
	    <servlet-name>UserProfileServlet</servlet-name>
	    <url-pattern>/profile</url-pattern>
	</servlet-mapping>

    <servlet>
        <servlet-name>UserDeleteServlet</servlet-name>
        <servlet-class>com.user.UserDeleteServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>UserDeleteServlet</servlet-name>
        <url-pattern>/UserDeleteServlet</url-pattern>
    </servlet-mapping>
    
    <servlet>
	    <servlet-name>LogoutServlet</servlet-name>
	    <servlet-class>com.user.LogoutServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
	    <servlet-name>LogoutServlet</servlet-name>
	    <url-pattern>/LogoutServlet</url-pattern>
	</servlet-mapping>
	
	<servlet>
	    <servlet-name>ContactServlet</servlet-name>
	    <servlet-class>com.contact.ContactServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
	    <servlet-name>ContactServlet</servlet-name>
	    <url-pattern>/ContactServlet</url-pattern>
	</servlet-mapping>
	
	<servlet>
        <servlet-name>AddgameServlet</servlet-name>
        <servlet-class>com.game.AddgameServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AddgameServlet</servlet-name>
        <url-pattern>/addGame</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>GameListServlet</servlet-name>
        <servlet-class>com.game.GameListServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>GameListServlet</servlet-name>
        <url-pattern>/GameListServlet</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>UpdategameServlet</servlet-name>
        <servlet-class>com.game.UpdateGameServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>UpdategameServlet</servlet-name>
        <url-pattern>/Update</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>DeletegameServlet</servlet-name>
        <servlet-class>com.game.DeleteGameServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>DeletegameServlet</servlet-name>
        <url-pattern>/Delete</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>UserGameListServlet</servlet-name>
        <servlet-class>com.game.UserGameListServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>UserGameListServlet</servlet-name>
        <url-pattern>/UserGameListServlet</url-pattern>
    </servlet-mapping>

</web-app> 